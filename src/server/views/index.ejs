<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>React Boilerplate</title>

    <% if (process.env.NODE_ENV === 'production') { %>
      <link rel='stylesheet' type='text/css' href="<%- webpack.stylesGlobal %>">
      <link rel='stylesheet' type='text/css' href="<%- webpack.stylesLocal %>">
    <% } %>
</head>

  <body>

    <% if (process.env.NODE_ENV === 'development') { %>
      <div id="app"></div>
      <script src="http://localhost:3001/bundle.js"></script>
    <% } %>

    <% if (process.env.NODE_ENV === 'production') { %>
      <div id="app"><%- app %></div>
      <script src="<%- webpack.vendor %>"></script>
      <script src="<%- webpack.bundle %>"></script>
    <% } %>

  </body>
</html>
